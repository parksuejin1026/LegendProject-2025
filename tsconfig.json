{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Next.js Specific / Required */
    "moduleResolution": "node", // Next.js 권장 설정
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve", // Next.js에서는 'preserve'를 사용해야 합니다.
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* Linting/Strictness (기존 설정 유지) */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/**/*.tsx",
    ".next/types/**/*.ts" // Next.js가 생성하는 타입 정의 파일
  ],
  "exclude": [
    "node_modules"
  ]
}